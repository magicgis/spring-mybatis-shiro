<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
	default-lazy-init="true" default-autowire="byName">

	<bean id="enginScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean" autowire="no">		
		<property name="quartzProperties">
            <props>
                <prop key="org.quartz.threadPool.class">org.quartz.simpl.SimpleThreadPool</prop>
                <prop key="org.quartz.threadPool.threadCount">5</prop>
                <prop key="org.quartz.threadPool.threadPriority">5</prop>
                <prop key="org.quartz.jobStore.class">org.quartz.simpl.RAMJobStore</prop>
                <prop key="org.quartz.scheduler.instanceName">enginSchedulerGotone</prop>
                <prop key="org.quartz.scheduler.instanceId">AUTO</prop>
                <prop key="org.quartz.plugin.shutdownhook.class">org.quartz.plugins.management.ShutdownHookPlugin</prop>
                <prop key="org.quartz.plugin.shutdownhook.cleanShutdown">true</prop>
                <prop key="org.quartz.scheduler.skipUpdateCheck">true</prop>
             </props>
        </property>
    </bean>
	
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean" parent="enginScheduler" autowire="no">
		<property name="triggers">
			<list>
			    <ref bean="fundCalcCronTrigger" />
				<ref bean="fundPlanCronTrigger" />
				<ref bean="monthPostCronTrigger" />
				<ref bean="weekPostCronTrigger" />
				<ref bean="syncPostCronTrigger" />
				<ref bean="sendMSMPlanCronTrigger"/>
				<ref bean="countMemberPlanSchedule"/>
			</list>
		</property>
	</bean>
	
	<!-- 测试sp业务短信发送定时器 -->
	<bean id="sendMSMPlanCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<bean class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
				<property name="targetObject">
					<bean class="cn.linkea.tbj.daemon.SendSMSPlanSchedule" />
				</property>
				<property name="targetMethod" value="doSchedule" />
				<property name="concurrent" value="false" />
			</bean>
		</property>
		<property name="cronExpression" value="0 0 9 * * ?"></property>
	</bean>
	
	<!-- 查询前一天用户注册量定时器 -->
	<bean id="countMemberPlanSchedule" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<bean class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
				<property name="targetObject">
					<bean class="cn.linkea.tbj.daemon.CountMemberPlanSchedule" />
				</property>
				<property name="targetMethod" value="doSchedule" />
				<property name="concurrent" value="false" />
			</bean>
		</property>
		<property name="cronExpression" value="0 0 1 * * ?"></property>
	</bean>
	
	
	
	<bean id="fundCalcCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<bean class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
				<property name="targetObject">
					<bean class="cn.linkea.tbj.daemon.MemberFundCalculatorSchedule" />
				</property>
				<property name="targetMethod" value="doSchedule" />
				<property name="concurrent" value="false" />
			</bean>
		</property>
		<property name="cronExpression" value="0 0 1,4,21,23 * * ?"></property>
	</bean>
	
	<!-- 基金定投 -->
	<bean id="fundPlanCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<bean class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
				<property name="targetObject">
					<bean class="cn.linkea.tbj.daemon.FundPlanSchedule" />
				</property>
				<property name="targetMethod" value="doSchedule" />
				<property name="concurrent" value="false" />
			</bean>
		</property>
		<property name="cronExpression" value="0 0 1,2,13,19,21,23 * * ?"></property>
	</bean>
	
	<!-- 用户新品月推送 ,每月1号下午8点推送-->
	<bean id="monthPostCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<bean class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
				<property name="targetObject">
					<bean class="cn.linkea.tbj.daemon.MemberFreshMonthPostSchedule" />
				</property>
				<property name="targetMethod" value="doSchedule" />
				<property name="concurrent" value="false" />
			</bean>
		</property>
		<property name="cronExpression" value="0 0 20 1 * ?"></property>
	</bean>
    
    <!-- 周户新品月推送，每周一上午10点推送 -->
	<bean id="weekPostCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<bean class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
				<property name="targetObject">
					<bean class="cn.linkea.tbj.daemon.MemberFreshWeekPostSchedule" />
				</property>
				<property name="targetMethod" value="doSchedule" />
				<property name="concurrent" value="false" />
			</bean>
		</property>
		<property name="cronExpression" value="0 0 20 ? * MON"></property>
	</bean>
	
	<!--SYNC户新品月推送,每天下午5点推送 -->
	<bean id="syncPostCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<bean class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
				<property name="targetObject">
					<bean class="cn.linkea.tbj.daemon.MemberFreshSYNCPostSchedule" />
				</property>
				<property name="targetMethod" value="doSchedule" />
				<property name="concurrent" value="false" />
			</bean>
		</property>
		<property name="cronExpression" value="0 0 20 * * ?"></property>
	</bean>
</beans>
